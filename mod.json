{
    "Name": "IMC.Spyglass",
    "Description": "A server-side mod that handles sanctions based on player reports on the community Northstar Discord.",
    "Version": "2.2.0",
    "LoadPriority": 2,
    "ConVars": [
        {
            "Name": "spyglass_api_hostname",
            "DefaultValue": "https://spyglass.tf/"
        }
    ],
    "Scripts": [
        {
            "Path": "nanoglass/models.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "nanoglass/json_parsers.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "nanoglass/api/api_sanctions.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "nanoglass/nanoglass.nut",
            "RunOn": "SERVER && MP",
            "ServerCallback":
            {
                "After": "Spyglass_Init"
            }
        }
    ]
}